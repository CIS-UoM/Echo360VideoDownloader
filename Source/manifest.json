{
    "manifest_version": 2,

    "name": "Unimelb Recording Downloader",
    "description": "This extension allows you to download all the recordings available in current page",
    "version": "1.0",

    "browser_action": {
        "default_title": "Download all the recordings available in current page!",
        "default_icon": "icon.png",
        "default_popup": "browser_popup.html"
    },
    "permissions": [
        "activeTab",
        "downloads"
    ],
    "content_scripts": [{
        "matches": ["https://content.lecture.unimelb.edu.au/*"],
        "js": ["bower_components/jquery/dist/jquery.min.js", "content_script.js"],
        "all_frames": true
    }, {
        "matches": ["https://app.lms.unimelb.edu.au/webapps/blackboard/content/contentWrapper.jsp*"],
        "js": ["bower_components/jquery/dist/jquery.min.js", "content_script_lecture.js"],
        "all_frames": false
    }]

    // "background": {
    //     "scripts": ["eventpage.js"],
    //     "persistent": false
    // }
}
